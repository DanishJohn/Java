public class Bird {
	private String name;
	private String latin;
	private int timeObserved;
	
	public Bird(String name, String latin, int observed) {
		this.name = name;
		this.latin = latin;
		this.timeObserved = observed;
	}
	
	public String getName() {
		return this.name;
	}
	
	public String getLatin() {
		return this.latin;
	}
	
	public void observation() {
		this.timeObserved++;
	}
	
	public int getObs() {
		return this.timeObserved;
	}
	
	public String toString() {
		return this.getName() + " (" + this.getLatin() +") " + this.getObs() + " observations";
	}
}
